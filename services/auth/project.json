{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "services/auth/src",
  "targets": {
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "services/auth",
        "color": true,
        "command": "tsc && sam build"
      }
    },
    "serve": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "services/auth",
        "color": true,
        "command": "nx run build && sam local invoke -e events/token-event.json"
      }
    },
    "serve-debug": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "services/auth",
        "color": true,
        "command": "nx run build && sam local invoke -e events/token-event.json -d 8065"
      }
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "services/auth",
        "color": true,
        "command": "sam deploy"
      },
      "dependsOn": [
        {
          "target": "deploy",
          "projects": "dependencies"
        }
      ]
    },
    "remove": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "services/auth",
        "color": true,
        "command": "sam delete"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["services/auth/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/services/auth"],
      "options": {
        "jestConfig": "services/auth/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["service"],
  "implicitDependencies": ["core"]
}
