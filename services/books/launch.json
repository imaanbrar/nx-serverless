{
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to SAM CLI",
      "address": "localhost",
      "port": 3000,
      "localRoot": "${workspaceRoot}/dist/out-tsc",
      "remoteRoot": "/var/task",
      "protocol": "inspector",
      "stopOnEntry": false,
      "outFiles": ["${workspaceFolder}/dist/out-tsc/**/*.js"],
      "preLaunchTask": "build service/books"
    },
    {
      "type": "aws-sam",
      "request": "direct-invoke",
      "name": "lambda:books (nodejs12.x)",
      "sam": {
        "buildArguments": ["--beta-features"],
        "localArguments": [
          "-e",
          "${workspaceFolder}/services/books/events/event.json"
        ]
      },
      "invokeTarget": {
        "target": "template",
        "templatePath": "services/books/template.yaml",
        "logicalId": "booksFunction"
      },
      "lambda": {
        "payload": {},
        "environmentVariables": {}
      },
      "preLaunchTask": "build service/books"
    },
    {
      "type": "aws-sam",
      "request": "direct-invoke",
      "name": "API lambda:booksFunction (nodejs12.x)",
      "invokeTarget": {
        "target": "api",
        "templatePath": "services/books/template.yaml",
        "logicalId": "booksFunction"
      },
      "api": {
        "path": "/books",
        "httpMethod": "get",
        "payload": {
          "json": {}
        }
      }
    }
  ]
}
