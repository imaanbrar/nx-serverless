{
  "name": "nx-serverless",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "nx": "nx",
    "localstack": "docker-compose up",
    "build": "nx build",
    "serve": "nx run-many --target=serve --all",
    "serve-all": "sam local start-api -t services/template.yaml",
    "serve-all-debug": "sam local start-api -d 8065 -t services/template.yaml",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "deploy": "nx run-many --target=deploy --all",
    "affected": "nx affected",
    "format": "nx format:write",
    "update": "nx migrate latest",
    "workspace-generator": "nx workspace-generator",
    "test:affected": "nx affected:test --base=origin/main --head=HEAD",
    "deploy:affected": "nx affected --target=deploy --all",
    "lint:affected": "nx affected:lint --base=origin/main --head=HEAD",
    "g:http-handler": " npx nx workspace-generator http-handler",
    "g:handler": " npx nx workspace-generator handler",
    "g:service": " npx nx workspace-generator service",
    "g:model": " npx nx workspace-generator model"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.161.0",
    "@aws-sdk/util-dynamodb": "3.80.0",
    "@middy/core": "2.5.7",
    "@middy/http-json-body-parser": "2.5.7",
    "aws-sdk": "^2.1206.0",
    "dynamoose": "^3.1.0",
    "jsonwebtoken": "8.5.1",
    "middy": "0.36.0",
    "toml": "^3.0.0",
    "tslib": "2.0.0",
    "ulid": "2.3.0",
    "yup": "0.32.11"
  },
  "devDependencies": {
    "@aws-sdk/types": "3.55.0",
    "@jest/transform": "27.5.1",
    "@nrwl/cli": "14.8.2",
    "@nrwl/devkit": "14.8.2",
    "@nrwl/eslint-plugin-nx": "14.8.2",
    "@nrwl/jest": "14.8.2",
    "@nrwl/linter": "14.8.2",
    "@nrwl/node": "14.8.2",
    "@nrwl/nx-cloud": "14.7.0",
    "@nrwl/tao": "14.8.2",
    "@nrwl/workspace": "14.8.2",
    "@types/aws-lambda": "8.10.93",
    "@types/jest": "28.1.8",
    "@types/jsonwebtoken": "8.5.8",
    "@types/node": "18.7.1",
    "@types/serverless": "3.0.2",
    "@types/terser-webpack-plugin": "5.0.4",
    "@types/webpack": "5.28.0",
    "esbuild": "0.14.36",
    "eslint": "8.15.0",
    "eslint-config-prettier": "8.5.0",
    "husky": "7.0.4",
    "jest": "28.1.3",
    "lambda-event-mock": "1.5.0",
    "lint-staged": "12.3.8",
    "prettier": "2.7.1",
    "ts-jest": "28.0.8",
    "ts-loader": "9.2.8",
    "ts-morph": "15.0.0",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "engines": {
    "node": ">=16"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,yml,yaml,html}": [
      "prettier --write"
    ]
  }
}

